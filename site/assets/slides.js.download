var goToSlide=function(slides,index){for(var i=0;i<slides.length;i++){slides[i].classList.remove("is-current")}slides[index].classList.add("is-current")};var init=function(interval){var current=0;var slides=document.querySelectorAll(".js-slides li");if(slides.length===0){return}goToSlide(slides,current);var slidesTimer=setInterval(function(){current=current!=slides.length-1?current+1:0;goToSlide(slides,current)},interval);var slidesNext=document.querySelector(".js-slides-next");slidesNext.addEventListener("click",function(e){clearInterval(slidesTimer);current=current!=slides.length-1?current+1:0;goToSlide(slides,current)});var slidesPrev=document.querySelector(".js-slides-prev");slidesPrev.addEventListener("click",function(e){clearInterval(slidesTimer);current=current!=0?current-1:slides.length-1;goToSlide(slides,current)})};init(5e3);
